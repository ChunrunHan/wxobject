/* pages/goods_details/index.wxss */
swiper {
    height: 100vw;
}
swiper image {
    width: 100vw;
    height: 100vw;
}

.alone view,
.group view {
    background: transparent;
}

.price {
    font-size: 20px;
}

.old-price {
    font-size: 14px;
    padding-left: 10px;
    text-decoration: line-through;
}

.dec {
    font-size: 12px;
}


.tag {
    padding: 10px 5px;
    background: #f8f8f8;
    font-size: 12px;
    align-items: center;
}

.tag .icon {
    width: 12px;
    height: 12px;
    margin-left: 5px;
}

.tag view{
    background: transparent;
    padding: 0 2px;
}

.buy {
    position: fixed;
    bottom: 0;
    width: 100vw;
    height: 50px;
    background: #fff;
    color: #fff;
    font-size: 14px;
    text-align: center;
}

.buy .alone
, .buy .group{
    width: 50vw;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.buy .alone {
    background: #ea524e;
}

.buy .group {
    background: #c9302c;
}

.pin .title, .ratingList .title{
    padding: 10px;
    justify-content: space-between;
}

.pin .title .showMore {
    font-size: 14px;
}

.pin .item, .ratingList .item .header{
    padding: 5px;
    border-top: 1px solid #e8e8e8;
    justify-content: space-between;

}

.pin .item .left, .ratingList .item .header .left{
    align-items: center;
}

.pin .item .right, .ratingList .item .header .right  {
     align-items: center;
 }

.ratingList .item .header .right {
    color: #666;
}

.pin .item .right .btn {
    margin-left: 10px;
}

.pin .item .right .prompt {
    align-items: flex-end;
    justify-content: center;
    flex-direction: column;
    font-size: 14px;
}

.pin .item .right .prompt .time {
    font-size: 12px;
    color: #999;
}

.pin .item image {
    width: 40px;
    height: 40px;
    border-radius: 40px;
}

.pin .item .name, .ratingList .item .name {
    margin-left: 10px;
}


.alert .item {
    padding: 10px;
    justify-content: space-between;
    align-items: center;
}

.alert .item image {
    border-radius: 40px;
    width: 40px;
    height: 40px;
    margin-right: 10px;
}

.alert .footer {
    padding: 5px;
    text-align: center;
}

.alert .remaining {
   color: #58595b;
    margin-left: 3px;
    font-size: 12px;
}

.alert .name {
    font-weight: bold;
}

.share {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}

.share image{
    width: 20px;
    height: 20px;
}

button {
    background: transparent;
}
button::after{
    display:none;
}

.button-hover {
    background: transparent;
}

.other-button-hover {
    background: transparent;
}

.ratingList .item{
    padding: 10px 0;

}

.ratingList image {
    width: 30px;
    height: 30px;
    border-radius: 30px;
    background: #000;
}

.ratingList .body {
    padding: 0 5px;
    font-size: 12px;
    color: #999999;
}