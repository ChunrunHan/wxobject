/* pages/goods_details/index.wxss */
swiper {
    height: 100vw;
}
swiper image {
    width: 100vw;
    height: 100vw;
}

.price {
    font-size: 20px;
}

.old-price {
    font-size: 14px;
    padding-left: 10px;
    text-decoration: line-through;
}

.dec {
    font-size: 12px;
}


.tag {
    padding: 10px 5px;
    background: #f8f8f8;
    font-size: 12px;
    align-items: center;
}

.tag .icon {
    width: 12px;
    height: 12px;
    margin-left: 5px;
}

.buy {
    position: fixed;
    bottom: 0;
    width: 100vw;
    height: 50px;
    background: #fff;
    color: #fff;
    font-size: 14px;
    text-align: center;
}

.buy .alone
, .buy .group{
    width: 50vw;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.buy .alone {
    background: #ea524e;
}

.buy .group {
    background: #c9302c;
}

.pin .title {
    padding: 10px;
    justify-content: space-between;
}

.pin .title .more {
    font-size: 14px;
}

.pin .item{
    padding: 5px;
    border-top: 1px solid #e8e8e8;
    justify-content: space-between;

}

.pin .item .left {
    align-items: center;
}

.pin .item .right {
     align-items: center;
 }

.pin .item .right .btn {
    margin-left: 10px;
}

.pin .item .right .prompt {
    align-items: center;
    justify-content: center;
    flex-direction: column;
    font-size: 14px;
}

.pin .item .right .prompt .time {
    font-size: 12px;
    color: #999;
}

.pin .item image {
    width: 40px;
    height: 40px;
    background: #000;
    border-radius: 40px;
}

.pin .item .name {
    margin-left: 10px;
}