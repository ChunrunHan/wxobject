<!--pages/goods_details/index.wxml-->
<swiper indicator-dots="{{swiperCofing.indicatorDots}}"
        autoplay="{{swiperCofing.autoplay}}" interval="{{swiperCofing.interval}}" duration="{{swiperCofing.duration}}" circula="{{swiperCofing.circular}}">
    <block wx:for="{{goodsDetails.images}}">
        <swiper-item>
            <image src="{{imgUrl + '/' + goodsDetails.sellerId + '/' + item}}" class="slide-image"/>
        </swiper-item>
    </block>
</swiper>

<view class="pd-10">
    <view class="flex" style="justify-content: space-between">

        <view class="flex" style="align-items: flex-end">
            <view class="price co_red">
                ￥{{goodsDetails.price}}
            </view>
            <view class="old-price co_ash">
                ￥{{goodsDetails.oldPrice}}
            </view>
        </view>
        <!--<view class="icon">-->
            <!--<image src="../../img/share.svg"></image>-->
            <!--<view>分享</view>-->
        <!--</view>-->
        <view style="font-size: 14px">
            已团{{goodsDetails.monthSell || 0}}件·{{goodsDetails.buyerLimit}}人团
        </view>
    </view>

</view>
<view class="pd-10">{{goodsDetails.name}}</view>
<view class="flex tag">
    <view>
        <image class="icon" src="../../img/icon.svg"></image>
        全场包邮
    </view>
    <view wx:if="{{goodsDetails.seventDaysRefund}}">
        <image class="icon" src="../../img/icon.svg"></image>
        7天退货
    </view>
    <view wx:if="{{goodsDetails.oneDayArrive}}">
        <image class="icon" src="../../img/icon.svg"></image>
        当日达
    </view>
    <view>
        <image class="icon" src="../../img/icon.svg"></image>
        假一赔十
    </view>
</view>
<view class="pd-10 pin">
    <view class="title flex">
        <view>2人正在拼单</view>
        <view class="showMore">查看更多</view>
    </view>
    <view class="item flex">
        <view class="flex left">
            <image></image>
            <view class="name">永恒</view>
        </view>
        <view class="flex right">
            <view class="flex prompt">
                <view class="number">还差1人拼成</view>
                <view class="time">剩余19:59:24.3</view>
            </view>
            <view class="btn bc_red">去拼单</view>
        </view>
    </view>
    <view class="item flex">
        <view class="flex left">
            <image></image>
            <view class="name">永恒</view>
        </view>
        <view class="flex right">
            <view class="flex prompt">
                <view class="number">还差1人拼成</view>
                <view class="time">剩余19:59:24.3</view>
            </view>
            <view class="btn bc_red">去拼单</view>
        </view>
    </view>
    <view class="item flex">
        <view class="flex left">
            <image></image>
            <view class="name">永恒</view>
        </view>
        <view class="flex right">
            <view class="flex prompt">
                <view class="number">还差1人拼成</view>
                <view class="time">剩余19:59:24.3</view>
            </view>
            <view class="btn bc_red">去拼单</view>
        </view>
    </view>

</view>
