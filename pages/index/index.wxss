/**index.wxss**/

.scroll-view-item {
  height: 150px;
}

.price {
  font-size: 20px;
}

.dec {
  font-size: 14px;
}

.goods-list .item{
  border-top: 5px solid #e8e8e8;
}

.goods-list .item .img {
    display: flex;
    justify-content: center;
    padding-top: 10px;
}
.goods-list .item .img image{
    width: 150px;
    height: 150px;
}

.nav {
 text-align: center;
  display: flex;
  justify-content: space-around;
  padding: 10px;
  font-size: 14px;
}

.nav .item image{
  width: 40px;
  height: 40px;
  border-radius: 40px;
}

.zone {
    border-top: 1px solid #f2f2f2;
    padding: 5px;
    text-align: center;
    justify-content: center;
    align-items: center;
    display: flex;
}

.zone .flex{
    padding: 5px 10px;
    text-align: center;
    justify-content: center;
    align-items: center;
    display: flex;
    color: #fff;
    font-weight: bold;
    background: #d2d2d2;
    border-radius: 25px;
}

.zone image {
    width: 14px;
    height: 14px;
    margin-left: 3px;
}


.zone view {
    background: transparent;
}