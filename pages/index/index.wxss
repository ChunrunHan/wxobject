/**index.wxss**/
page{
  font-family:sans-serif;
}
swiper, swiper image {
    width: 100vw;
    height: 37.5vw;
}

.price {
    font-size: 18px;
    font-weight:900;

}

.dec {
    font-size: 12px;
}

.goods-list .item {
    /* border-top: 5px solid #e8e8e8; */
     border-top: 4px solid #f2f2f2;
     width: calc(100vw / 2 - 2px);
     float: left;
}
.goods-list .item:nth-child(2n){
  margin-left:2px; 
}

.goods-list .item:nth-child(2n-1){
  margin-right:2px; 
}

.goods-list .goods-bot{
  height: 70px;
}

.goods-list .goods-name{
  height:40px;
  overflow:hidden;
  text-indent:5px;
  word-spacing: 2px;
  color: #151516;
  font-size: 12px;
}

.clearfloat{clear:both} 

.goods-list .item .img {
    display: flex;
    justify-content: center;
    /* padding-top: 10px; */
}

 .goods-list .item .img image {
    height: calc(100vw / 2 + 5px);
} 

.nav {
    text-align: center;
    display: flex;
    justify-content: space-around;
    padding: 10px;
    font-size: 14px;
}

.nav .item image {
    width: 40px;
    height: 40px;
    border-radius: 40px;
}

.zone {
    /* border-top: 1px solid #f2f2f2; */
    padding: 5px;
    text-align: center;
    justify-content: center;
    align-items: center;
    display: flex;
    background:#e02e24;

}

.zone .flex {
    padding: 5px 10px;
    text-align: center;
    justify-content: center;
    align-items: center;
    display: flex;
    color: #fff;
    font-weight: bold;
    /* background: #d2d2d2; */
    border-radius: 25px;
}

.zone image {
    width: 14px;
    height: 14px;
    margin-left: 3px;
}

.zone view {
    background: transparent;
}
#border-white{
  border-radius: 25px;
  border: 1px solid whtie;
}


/* 优惠券 */
.model view, wx-swiper{
  background: transparent;
}
.model {
    height: 100vh;
    width: 100vw;
    background: rgba(0, 0, 0, .5);
    position: fixed;
    z-index: 10;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.model .discount {
    position: relative;
    width: 80vw;
    border-radius: 20px;
    border-radius: 20px;
    display: block;
    background: #fa4228;
}

.model .discount .top {
    width: 14vw;
    height: 14vw;
    background: #fa4228;
    position: absolute;
    left: 33vw;
    top: -5vw;
    border-radius: 100%;
}

.model .discount .topF {
    width: 100%;
    height: 15vw;
    background: #fa4228;
    position: absolute;
    top: 5vw;
    border-radius: 149%;
    box-shadow: 0 3px 3px rgba(0, 0, 0, .2);
    text-align: center;
    color: #fff;
}

.model .discount .topF .text1 {
    font-size: 1rem;
    font-weight: bold;
}

.model .discount .topF .text2 {
    font-size: 16px;
}

.model .discount .box {
    padding: 22.5vw 0 15px;
}

.model .discount .box .list {
    margin: 0 15px;
    height: 60px;
    background: #fff;
    position: relative;
    display: flex;
}

.model .discount .box .list + .list {
    margin-top: 15px;
}

.model .discount .box .list .left {
    width: 30%;
    position: relative;
    border-right: 1px dashed #dbdbdb;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center
}

.model .discount .box .list .right {
    width: 30%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center
}

.model .discount .box .list .center {
    width: 38%;
    padding-left: 2%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.model .discount .box .list .center .name {
    font-size: 0.8rem;
}

.model .discount .box .list .center .tags .tag {
    margin-left: 3px;
    padding: 0 1px;
    border-radius: 3px;
    border: 1px solid #e47a37;
    color: #e47a37;
    float: left;
    font-size: .7rem
}

.model .discount .box .list .left .price {
    font-size: 1.1rem;
    color: #f80234;
}

.model .discount .box .list .right .items {
    color: #c41d43;
    font-size: .6rem;
    line-height: 0.7rem;
}

.model .discount .box .list .right .date {
    color: #c41d43;
    font-size: .5rem;
    margin-bottom: 0.1rem;
}

.model .discount .box .list .right .use {
    width: 80%;
    padding: 2px 0 2px 0;
    border-radius: 8px;
    color: #fff;
    background: #ff3846;
    font-size: .6rem;
    /* margin: 0.1rem auto 0 auto; */
     margin: 0.5rem auto 0 auto;
}

.model .discount .box .list .left .full {
    font-size: .7rem;
    color: #737373;
}

.model .discount .box .list .left .topY {
    position: absolute;
    border-radius: 100%;
    height: 10px;
    width: 10px;
    background: #fa4228;
    top: -5px;
    right: -5px
}

.model .discount .box .list .left .bottomY {
    position: absolute;
    border-radius: 100%;
    height: 10px;
    width: 10px;
    background: #fa4228;
    bottom: -5px;
    right: -5px;
}

.model .close {
    position: absolute;
    color: #fff;
    font-size: 35px;
    left: 45%;
    margin-top: 10px;
}