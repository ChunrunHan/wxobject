/* pages/rating/index.wxss */
page {
    border-top: 1px solid #f2f2f2;
}


.rating .title{
    padding: 15px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #f2f2f2;
}

.rating .title image {
    width: 18px;
    height: 18px;
    margin-right: 10px;
}

.goods {
    padding: 15px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #f2f2f2;
}

.goods image{
    width: 40px;
    height: 40px;
}

.goods-name {
    padding-left: 15px;
    font-weight: bold;
    width: calc(100vw - 85px);
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}


.goods-rating {
    padding: 10px;
}

.goods-rating textarea {
    width: 100%;
}



.start {
    display: flex;
    justify-content: center;
    align-content: center;
}
.start image {
    width: 18px;
    height: 18px;
    padding: 15px;
}
