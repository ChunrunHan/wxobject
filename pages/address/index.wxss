/* pages/address/index.wxss */
page {
    background: #f2f2f2;
}

.btn {
    padding: 10px;
    margin: 10px;
}

.selected {
    color: #e02e24
}

.address-list .item {
    margin-bottom: 10px;
}

.address-list .item .details {
    padding: 15px;
    background: #fff;
    border-bottom: 1px dotted #d2d2d2;
}

.address-list .item .handle {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    background: #fff;
    color: #9c9c9c;
}

.edit {
    margin-right: 15px;
}

.mask {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, .3);
}

.alert {
    background: #fff;
    border-radius: 10px;
    max-width: calc(100vw - 60px);
    position: relative;
}

.alert .title {
    padding: 15px;
    text-align: center;
    border-bottom: 1px dotted #d2d2d2;
}

.alert .name {
    width: 50%;
    border-right: 1px dotted #d2d2d2;
}

.alert .item {
    border-bottom: 1px dotted #d2d2d2;
}

.alert input {
    padding: 10px;
}

textarea {
    width: auto;
    height: 50px;
    padding: 10px;
}

.alert .close{
    width: 30px;
    height: 30px;
    border-radius: 30px;
    background: #e0e0e0;
    position: absolute;
    right: -15px;
    top: -15px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.alert .close image{
    width: 20px;
    height: 20px;
}

